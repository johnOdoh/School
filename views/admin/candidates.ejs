<%- include('./header.ejs') %>
    <!-- /. NAV SIDE  -->
    <div id="page-wrapper">
        <div id="page-inner">
            <div class="row">
                <div class="col-md-12">
                    <h2>Candidates</h2>
                </div>
            </div>
            <!-- /. ROW  -->
            <hr />
            <div class="row">
                <div class="col-xs-12">
                    <div class="panel panel-default">
                        <div class="panel-heading ">
                            <ul class="nav nav-pills">
                                <li class="active"><a href="#unaccepted" data-toggle="tab">Unaccepted</a>
                                </li>
                                <li class=""><a href="#accepted" data-toggle="tab">Accepted</a>
                            </ul>
                        </div>
                        <div class="tab-content">
                            <% if(successMessage.length !== 0) { %>
                                <h5 class="text-center text-success">
                                    <%= successMessage %>
                                </h5>
                                <% } %>
                                    <div class="tab-pane fade active in" id="unaccepted">
                                        <div class="panel-body">
                                            <div class="table-responsive">
                                                <form action="/admin/accept" method="POST">
                                                    <table class="table table-striped table-bordered table-hover" style="width: 100%;">
                                                        <thead>
                                                            <tr>
                                                                <th>Accept</th>
                                                                <th>Exam No</th>
                                                                <th>Name</th>
                                                                <th>Action</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <% for (let candidate of candidates) { if (candidate.accepted === false) { %>
                                                                <tr>
                                                                    <td><input value="<%= candidate._id %>" type="checkbox" name="candidateIds[]" title="mark to select candidate"></td>
                                                                    <td>
                                                                        <%= candidate.regNo %>
                                                                    </td>
                                                                    <td>
                                                                        <%= candidate.firstName %>
                                                                            <%= candidate.lastName %>
                                                                                <%= candidate.middleName %>
                                                                    </td>
                                                                    <td><a href=""><i class="fa fa-eye" title="view"></i></a></td>
                                                                </tr>
                                                                <% } } %>
                                                        </tbody>
                                                    </table>
                                                    <button type="submit" class="btn btn-danger">Accept Marked</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="tab-pane fade" id="accepted">
                                        <div class="panel-body">
                                            <div class="table-responsive">
                                                <form action="/admin/unaccept" method="POST">
                                                    <table class="table table-striped table-bordered table-hover" style="width: 100%;">
                                                        <thead>
                                                            <tr>
                                                                <th>Unaccept</th>
                                                                <th>Exam No</th>
                                                                <th>Name</th>
                                                                <th>Action</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <% for (let candidate of candidates) { if (candidate.accepted === true) { %>
                                                                <tr>
                                                                    <td><input value="<%= candidate._id %>" type="checkbox" name="candidateIds[]" title="mark to select candidate"></td>
                                                                    <td>
                                                                        <%= candidate.regNo %>
                                                                    </td>
                                                                    <td>
                                                                        <%= candidate.firstName %>
                                                                            <%= candidate.lastName %>
                                                                                <%= candidate.middleName %>
                                                                    </td>
                                                                    <td><a href=""><i class="fa fa-eye" title="view"></i></a></td>
                                                                </tr>
                                                                <% } } %>
                                                        </tbody>
                                                    </table>
                                                    <button type="submit" class="btn btn-danger">Unaccept Marked</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /. PAGE INNER  -->
    </div>
    <!-- /. PAGE WRAPPER  -->
    <!-- JQUERY SCRIPTS -->
    <script src="/portal/js/jquery-1.10.2.js"></script>
    <!-- BOOTSTRAP SCRIPTS -->
    <script src="/portal/js/bootstrap.min.js"></script>
    <!-- METISMENU SCRIPTS -->
    <script src="/portal/js/jquery.metisMenu.js"></script>
    <!-- CUSTOM SCRIPTS -->
    <script src="/portal/js/custom.js"></script>


    </body>

    </html>