<%- include('./header.ejs') %>
    <div id="page-wrapper">
        <div id="page-inner">
            <div class="row">
                <div class="col-md-12">
                    <h2>Profile</h2>
                </div>
            </div>
            <!-- /. ROW  -->
            <hr />
            <div class="row">
                <div class="col-xs-12">
                    <div class="panel panel-default">
                        <div class="panel-heading ">
                            <ul class="nav nav-pills">
                                <li class="active"><a href="#profile" data-toggle="tab">Profile</a>
                                </li>
                                <li class=""><a href="#edit-profile" data-toggle="tab">Edit Profile</a>
                            </ul>
                        </div>
                        <div class="tab-content">
                            <div class="tab-pane fade active in" id="profile">
                                <div class="panel-body">
                                    <div class="table-responsive">
                                        <table class="table table-striped table-bordered table-hover" style="width: 100%;">
                                            <tr>
                                                <td>Name</td>
                                                <td>
                                                    <%= user.firstName %>
                                                        <%= user.lastName %>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Email</td>
                                                <td>
                                                    <%= user.email %>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Role</td>
                                                <td style="text-transform: capitalize;">
                                                    <%= user.role %>
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane fade" id="edit-profile">
                                <div class="panel-body">
                                    <form action="" class="form-horizontal" method="POST">
                                        <div class="form-group">
                                            <div class="col-sm-12">
                                                <h5>Address:</h5>
                                                <input class="form-control" name="address" type="text">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-sm-12">
                                                <h5>Sponsor Name:</h5>
                                                <input class="form-control" name="sponsorName" type="email">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-sm-12">
                                                <h5>Sponsor Address:</h5>
                                                <input class="form-control" name="sponsorAddress" type="email">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-sm-12">
                                                <h5>Sponsor Phone No:</h5>
                                                <input class="form-control" name="sponsorPhone" type="email">
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-10">
                                                <button type="submit" class="btn btn-light btn-radius btn-brd grd1">Submit</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /. PAGE INNER  -->
    </div>
    <!-- /. PAGE WRAPPER  -->
    </div>
    <!-- /. WRAPPER  -->
    <!-- SCRIPTS -AT THE BOTOM TO REDUCE THE LOAD TIME-->
    <!-- JQUERY SCRIPTS -->
    <script src="/portal/js/jquery-1.10.2.js"></script>
    <!-- BOOTSTRAP SCRIPTS -->
    <script src="/portal/js/bootstrap.min.js"></script>
    <!-- METISMENU SCRIPTS -->
    <script src="/portal/js/jquery.metisMenu.js"></script>
    <!-- CUSTOM SCRIPTS -->
    <script src="/portal/js/custom.js"></script>


    </body>

    </html>