<%- include('./includes/header.ejs') %>

    <div id="overviews" class="section wb">
        <div class="container">
            <h2 class="mb-3 text-center">Candidate Registration</h2>
            <form action="/auth/register" class="form-horizontal" method="POST">
                <h4 class="mb-1"><b>Candidate information</b></h4>
                <div class="row">
                    <div class="form-group col-md-4 col-sm-6 col-12">
                        <h4>SurName:</h4>
                        <input class="form-control" type="text" name="surName" value="<%= input.surName %>" required>
                        <% if(errors.surName) { %>
                            <div class="text-danger"><i>Please enter a valid name</i></div>
                            <% } %>
                    </div>
                    <div class="form-group col-md-4 col-sm-6 col-12">
                        <h4>First Name:</h4>
                        <input class="form-control" type="text" name="firstName" value="<%= input.firstName %>" required>
                        <% if(errors.firstName) { %>
                            <div class="text-danger"><i>Please enter a valid name</i></div>
                            <% } %>
                    </div>
                    <div class="form-group col-md-4 col-sm-6 col-12">
                        <h4>Middle Name:</h4>
                        <input class="form-control" type="text" name="middleName" value="<%= input.middleName %>" required>
                        <% if(errors.middleName) { %>
                            <div class="text-danger"><i>Please enter a valid name</i></div>
                            <% } %>
                    </div>
                    <div class="form-group col-md-4 col-sm-6 col-12">
                        <h4>Entry Class:</h4>
                        <select class="form-control" name="class" required>
                            <option value="">Choose option</option>
                            <option value="JS1">JS1</option>
                            <option value="JS2">JS2</option>
                            <option value="SS1">SS1</option>
                        </select>
                        <% if(errors.class) { %>
                            <div class="text-danger"><i>Please choose an option</i></div>
                            <% } %>
                    </div>
                    <div class="form-group col-md-4 col-sm-6 col-12">
                        <h4>Address:</h4>
                        <input class="form-control" type="text" name="address" value="<%= input.address %>" required>
                        <% if(errors.address) { %>
                            <div class="text-danger"><i>Please enter a valid address</i></div>
                            <% } %>
                    </div>
                    <div class="form-group col-md-4 col-sm-6 col-12">
                        <h4>State:</h4>
                        <input class="form-control" type="text" name="state" value="<%= input.state %>" required>
                        <% if(errors.state) { %>
                            <div class="text-danger"><i>Please enter a valid state</i></div>
                            <% } %>
                    </div>
                    <div class="form-group col-md-4 col-sm-6 col-12">
                        <h4>LGA:</h4>
                        <input class="form-control" type="text" name="lga" value="<%= input.lga %>" required>
                        <% if(errors.lga) { %>
                            <div class="text-danger"><i>Please enter a valid LGA</i></div>
                            <% } %>
                    </div>
                    <div class="form-group col-md-4 col-sm-6 col-12">
                        <h4>Hometown:</h4>
                        <input class="form-control" type="text" name="hometown" value="<%= input.hometown %>" required>
                        <% if(errors.hometown) { %>
                            <div class="text-danger"><i>Please enter a valid hometown</i></div>
                            <% } %>
                    </div>
                    <div class="form-group col-md-4 col-sm-6 col-12">
                        <h4>Gender:</h4>
                        <select class="form-control" name="gender" required>
                            <option value="">Choose option</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                        </select>
                        <% if(errors.gender) { %>
                            <div class="text-danger"><i>Please choose an option</i></div>
                            <% } %>
                    </div>
                    <div class="form-group col-md-4 col-sm-6 col-12">
                        <h4>Blood Group:</h4>
                        <select class="form-control" name="bloodGroup" required>
                            <option value="">Choose option</option>
                            <option value="A+">A+</option>
                            <option value="A-">A-</option>
                            <option value="B+">B+</option>
                            <option value="B-">B-</option>
                            <option value="AB+">AB+</option>
                            <option value="AB-">AB-</option>
                            <option value="O+">O+</option>
                            <option value="O-">O-</option>
                        </select>
                        <% if(errors.bloodGroup) { %>
                            <div class="text-danger"><i>Please choose an option</i></div>
                            <% } %>
                    </div>
                    <div class="form-group col-md-4 col-sm-6 col-12">
                        <h4>DOB:</h4>
                        <input class="form-control" name="dob" type="date" placeholder="dd/mm/yyyy" value="<%= input.dob %>" required>
                        <% if(errors.dob) { %>
                            <div class=" text-danger"><i>Please enter a valid date</i></div>
                            <% } %>
                    </div>
                </div>
                <h4 class="mt-3 mb-2"><b>Parent/Guardian Information</b></h4>
                <div class="row">
                    <div class="form-group col-md-4 col-sm-6 col-12">
                        <h4>SurName:</h4>
                        <input class="form-control" name="sponsor_sname" type="text" value="<%= input.sponsor_sname %>" required>
                        <% if(errors.sponsor_sname) { %>
                            <div class="text-danger"><i>Please enter a valid name</i></div>
                            <% } %>
                    </div>
                    <div class="form-group col-md-4 col-sm-6 col-12">
                        <h4>First Name:</h4>
                        <input class="form-control" name="sponsor_fname" type="text" value="<%= input.sponsor_fname %>" required>
                        <% if(errors.sponsor_fname) { %>
                            <div class="text-danger"><i>Please enter a valid name</i></div>
                            <% } %>
                    </div>
                    <div class="form-group col-md-4 col-sm-6 col-12">
                        <h4>Middle Name:</h4>
                        <input class="form-control" name="sponsor_mname" type="text" value="<%= input.sponsor_mname %>" required>
                        <% if(errors.sponsor_mname) { %>
                            <div class="text-danger"><i>Please enter a valid name</i></div>
                            <% } %>
                    </div>
                    <div class="form-group col-md-4 col-sm-6 col-12">
                        <h4>Address:</h4>
                        <input class="form-control" name="sponsor_address" type="text" value="<%= input.sponsor_address %>" required>
                        <% if(errors.sponsor_address) { %>
                            <div class="text-danger"><i>Please enter a valid address</i></div>
                            <% } %>
                    </div>
                    <div class="form-group col-md-4 col-sm-6 col-12">
                        <h4>Email: <i>(optional)</i> </h4>
                        <input class="form-control" name="sponsor_email" type="email" value="<%= input.sponsor_email %>">
                    </div>
                    <div class="form-group col-md-4 col-sm-6 col-12">
                        <h4>Phone No:</h4>
                        <input class="form-control" name="sponsor_phoneNo" type="number" value="<%= input.sponsor_phoneNo %>" required>
                        <% if(errors.sponsor_phoneNo) { %>
                            <div class="text-danger"><i>Please enter a valid phone number</i></div>
                            <% } %>
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-light btn-radius btn-brd grd1">Submit</button>
                    </div>
                </div>
            </form>
        </div>
        <!-- end container -->
    </div>
    <!-- end section -->
    <%- include('./includes/footer.ejs') %>