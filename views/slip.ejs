<!DOCTYPE html>
<html lang="en">

<!-- Basic -->
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">

<!-- Mobile Metas -->
<meta name="viewport" content="width=device-width, initial-scale=1">

<!-- Site Metas -->
<title>SmartEDU - Education Responsive HTML5 Template</title>
<meta name="keywords" content="">
<meta name="description" content="">
<meta name="author" content="">

<!-- Site Icons -->
<link rel="shortcut icon" href="images/favicon.ico" type="image/x-icon" />
<link rel="apple-touch-icon" href="images/apple-touch-icon.png">

<!-- Bootstrap CSS -->
<link rel="stylesheet" href="/css/bootstrap.min.css">
<!-- Site CSS -->
<link rel="stylesheet" href="/css/style.css">
<style>
    @media print {
        .noprint {
            visibility: hidden;
        }
    }
</style>
</head>

<body class="host_version">

    <div class="container">
        <section style="display: flex; justify-content: space-between;">
            <div style="width: 150px; height: 150px;">
                <img src="/images/badge.jfif" alt="" class="img-fluid">
            </div>
            <h1 class="text-center">
                <b>SMART EDUCATION HIGH SCHOOL <br>P.O. Box 3025, OFF ZIKS AVENUE ENUGU</b><br>
                <i>...learning with happiness</i>
            </h1>
            <div style="width: 150px; height: 150px; border: 1px solid black; position: relative;">
                <span style="position: absolute; top: 50%; left: 50%; margin-top: -12.5px; margin-left: -29px;">Passport</span>
            </div>
        </section>
        <section class="m-5">
            <h3 class="text-center"><b>REGISTRATION SLIP</b></h3>
        </section>
        <section>
            <div class="table-responsive">
                <table class="table table-borderless">
                    <tr>
                        <td class="font-weight-bold text-right">Examination Year</td>
                        <td>
                            <%= data.year %>
                        </td>
                        <td class="font-weight-bold text-right">Examination Date</td>
                        <td>13th March</td>
                    </tr>
                    <tr>
                        <td class="font-weight-bold text-right">Venue</td>
                        <td>School Premises</td>
                        <td class="font-weight-bold text-right">Time</td>
                        <td>10:00 am</td>
                    </tr>
                </table>
            </div>
        </section>
        <section>
            <h4 class="mb-2"><b>Candidate Information</b></h4>
            <div class="table-responsive">
                <table class="table table-borderless">
                    <tr>
                        <td class="font-weight-bold text-right">Exam Number:</td>
                        <td>
                            <%= data.regNo %>
                        </td>
                        <td class="font-weight-bold text-right">Address:</td>
                        <td>
                            <%= data.address %>
                        </td>
                        <td class="font-weight-bold text-right">Gender:</td>
                        <td>
                            <%= data.gender %>
                        </td>
                    </tr>
                    <tr>
                        <td class="font-weight-bold text-right">SurName:</td>
                        <td>
                            <%= data.surName %>
                        </td>
                        <td class="font-weight-bold text-right">State:</td>
                        <td>
                            <%= data.state %>
                        </td>
                        <td class="font-weight-bold text-right">Entry Class:</td>
                        <td>
                            <%= data.class %>
                        </td>
                    </tr>
                    <tr>
                        <td class="font-weight-bold text-right">First Name:</td>
                        <td>
                            <%= data.firstName %>
                        </td>
                        <td class="font-weight-bold text-right">LGA:</td>
                        <td>
                            <%= data.LGA %>
                        </td>
                        <td class="font-weight-bold text-right">Date of Birth:</td>
                        <td>
                            <%= data.DOB %>
                        </td>
                    </tr>
                    <tr>
                        <td class="font-weight-bold text-right">Middle Name:</td>
                        <td>
                            <%= data.middleName %>
                        </td>
                        <td class="font-weight-bold text-right">Hometown:</td>
                        <td>
                            <%= data.hometown %>
                        </td>
                        <td class="font-weight-bold text-right">Blood Group:</td>
                        <td>
                            <%= data.bloodGroup %>
                        </td>
                    </tr>
                </table>
            </div>
        </section>
        <section class="mt-3 mb-3">
            <h4 class="mb-2"><b>Parent/Guardian Information</b></h4>
            <div class="table-responsive">
                <table class="table table-borderless">
                    <tr>
                        <td class="font-weight-bold text-right">SurName:</td>
                        <td>
                            <%= data.sponsor_surname %>
                        </td>
                        <td class="font-weight-bold text-right">Address:</td>
                        <td>
                            <%= data.sponsor_address %>
                        </td>
                    </tr>
                    <tr>
                        <td class="font-weight-bold text-right">First Name:</td>
                        <td>
                            <%= data.sponsor_firstname %>
                        </td>
                        <td class="font-weight-bold text-right">Phone Number:</td>
                        <td>
                            <%= data.sponsor_phoneNo %>
                        </td>
                    </tr>
                    <tr>
                        <td class="font-weight-bold text-right">Middle Name:</td>
                        <td>
                            <%= data.sponsor_middlename %>
                        </td>
                        <td class="font-weight-bold text-right">Email:</td>
                        <td>
                            <%= data.sponsor_email || '-' %>
                        </td>
                    </tr>
                </table>
            </div>
        </section>
        <div class="mb-3">
            <b>NB:</b> You must come for the examination with this slip unless you will not allowed to take the Exam
        </div>
        <div style="display: flex; justify-content: space-around;" class="noprint">
            <button>Send to email</button>
            <a href="/" class="btn btn-link">Back to homepage</a>
            <button type="button" onclick="getPdf(this)">Save as pdf</button>
        </div>
    </div>

    <script>
        const getPdf = btn => {
            const url = '/getPdf/<%= data.regNo %>'
            fetch(url, {
                    method: 'GET'
                })
                .then(response => {
                    // console.log(response)
                    if (!response.ok) {
                        throw Error();
                    }
                })
                // .then(data => {
                //     console.log(data)
                //         // const blob = new Blob([buffer], {
                //         //     type: 'application/pdf'
                //         // })
                //     const link = document.createElement('a')
                //     link.href = window.URL.createObjectURL(data)
                //     link.download = `slip.pdf`
                //     link.click()
                // })
                .catch(err => {
                    alert('There was an error, try again!')
                    console.log(err)
                        // window.location.reload(true)
                })
        }
        window.print()
    </script>

</body>

</html>