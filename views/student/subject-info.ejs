<%- include('./header.ejs') %>
    <div id="page-wrapper">
        <div id="page-inner">
            <div class="row">
                <div class="col-md-12">
                    <h2>Mathematics Info</h2>
                </div>
            </div>
            <!-- /. ROW  -->
            <hr />
            <div class="row">
                <div class="col-xs-12">
                    <div class="panel panel-default">
                        <div class="panel-heading ">
                            <ul class="nav nav-pills">
                                <li class="active"><a href="#assessments" data-toggle="tab">Assessments</a></li>
                                <li class=""><a href="#scheme" data-toggle="tab">Scheme of Work</a></li>
                                <li class=""><a href="#teacher" data-toggle="tab">Subject Teacher(s)</a></li>
                            </ul>
                        </div>
                        <div class="tab-content">
                            <div class="tab-pane fade active in" id="assessments">
                                <div class="panel-body">
                                    <div class="table-responsive">
                                        <table class="table table-striped table-bordered table-hover" style="width: 100%;">
                                            <thead class="text-left">
                                                <tr>
                                                    <th>Title</th>
                                                    <th>Description</th>
                                                    <th>Max Score</th>
                                                    <th>Your Score</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% for(let assessment of assessments) { %>
                                                    <tr>
                                                        <td>
                                                            <%= assessment.title %>
                                                        </td>
                                                        <td>
                                                            <%= assessment.description %>
                                                        </td>
                                                        <td style="color: red;">
                                                            <%= assessment.maxScore %>
                                                        </td>
                                                        <td>
                                                            <%= assessment.score %>
                                                        </td>
                                                    </tr>
                                                    <% } %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane fade" id="scheme">
                                <div class="panel-body">
                                    <div class="table-responsive">
                                        <table class="table table-striped table-bordered table-hover" style="width: 100%;">
                                            <thead class="text-center">
                                                <tr>
                                                    <th>Week</th>
                                                    <th>Activities</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% let counter = 1; for (let scheme of subjectInfo.scheme[termIndex].content ) { %>
                                                    <tr>
                                                        <td>Week
                                                            <%= counter %>
                                                        </td>
                                                        <td>
                                                            <%= scheme %>
                                                        </td>
                                                    </tr>
                                                    <% } %>
                                            </tbody>
                                        </table>
                                    </div>
                                    <h5>Recommended Material(s): </h5>
                                    <ul>
                                        <% for (let book of subjectInfo.recommendedBooks) { %>
                                            <li>
                                                <%= book.title %>; by <i><%= book.author %> </i></li>
                                            <% } %>
                                    </ul>
                                </div>
                            </div>
                            <div class="tab-pane fade" id="teacher">
                                <div class="panel-body">
                                    <div class="row">
                                        <% for (let teacher of subjectInfo.teachers) { %>
                                            <div class="col-lg-6 col-md-6 col-12" style="margin-bottom: 20px; padding: 10px;">
                                                <div class="course-item">
                                                    <div class="image-blog">
                                                        <img src="<%= teacher.image %>" alt="" class="img-responsive" style="max-height: 500px; min-height: 500px;">
                                                        <div style="font-size: 18px;">
                                                            <div style="padding-top: 10px;"><b>Name: </b>
                                                                <%= teacher.firstName + ' ' + teacher.lastName %>
                                                            </div>
                                                            <div style="padding-top: 10px;"><b>Phone Number: </b>
                                                                <%= teacher.phoneNo %>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /. PAGE INNER  -->
    </div>
    <!-- /. PAGE WRAPPER  -->
    </div>
    <!-- /. WRAPPER  -->
    <!-- SCRIPTS -AT THE BOTOM TO REDUCE THE LOAD TIME-->
    <!-- JQUERY SCRIPTS -->
    <script src="/portal/js/jquery-1.10.2.js"></script>
    <!-- BOOTSTRAP SCRIPTS -->
    <script src="/portal/js/bootstrap.min.js"></script>
    <!-- METISMENU SCRIPTS -->
    <script src="/portal/js/jquery.metisMenu.js"></script>
    <!-- CUSTOM SCRIPTS -->
    <script src="/portal/js/custom.js"></script>


    </body>

    </html>