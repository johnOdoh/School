<%- include('./header.ejs') %>
    <!-- /. NAV SIDE  -->
    <div id="page-wrapper">
        <div id="page-inner">
            <div class="row">
                <div class="col-md-12">
                    <h2>My Teachers</h2>
                </div>
            </div>
            <!-- /. ROW  -->
            <hr />
            <div class="row">
                <div class="col-xs-12">
                    <div class="panel panel-default">
                        <div class="panel-heading ">
                            <ul class="nav nav-pills">
                                <li class="active"><a href="#all" data-toggle="tab">All Teachers</a></li>
                                <li class=""><a href="#add" data-toggle="tab">Add Teacher</a></li>
                            </ul>
                        </div>
                        <div class="tab-content">
                            <% if(errMessage.length !== 0) { %>
                                <h4 class="text-center text-danger">
                                    <%= errMessage %>
                                </h4>
                                <% } if(successMessage.length !== 0) { %>
                                    <h4 class="text-center text-success">
                                        <%= successMessage %>
                                    </h4>
                                    <% } %>
                                        <div class="tab-pane fade active in" id="all">
                                            <div class="panel-body">
                                                <div class="table-responsive">
                                                    <table class="table table-striped table-bordered table-hover" style="width: 100%;">
                                                        <thead>
                                                            <tr>
                                                                <th>S/N</th>
                                                                <th>Name</th>
                                                                <th>Subject(s)</th>
                                                                <td></td>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <% counter = 1; for (let teacher of myTeachers) { %>
                                                                <tr>
                                                                    <td>
                                                                        <%= counter %>
                                                                    </td>
                                                                    <td>
                                                                        <%= teacher.firstName %>
                                                                            <%= teacher.lastName %>
                                                                    </td>
                                                                    <td>
                                                                        <% for (let subject of teacher.subjects) { %>
                                                                            <%= subject.name + '(' + subject.class + '), '%>
                                                                                <% } %>
                                                                    </td>
                                                                    <td><a href="/teacher/teacherProfile/<%= teacher._id %>" class="btn btn-info">View Profile</a></td>
                                                                </tr>
                                                                <% counter++ } %>
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="tab-pane fade" id="add">
                                            <div class="panel-body">
                                                <form action="/teacher/assignSubject" method="POST">
                                                    <div class="row">
                                                        <div class="col-md-6 col-xs-12" style="padding-right: 20px;">
                                                            <div class="form-group input-group">
                                                                <span class="input-group-addon">Email</span>
                                                                <input type="email" class="form-control" name="email" required>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6 col-xs-12" style="padding-right: 20px;">
                                                            <div class="form-group input-group">
                                                                <span class="input-group-addon">Subject</span>
                                                                <select name="subject" id="" class="form-control" required>
                                                                    <option value=" ">Choose option</option>
                                                                    <% for (let subject of subjects) { %>
                                                                    <option value="<%=subject %>"><%= subject %></option>
                                                                    <% } %>
                                                                </select>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div>
                                                        <button type="submit" class="btn btn-light btn-radius btn-brd grd1">Submit</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /. PAGE INNER  -->
    </div>
    <!-- /. PAGE WRAPPER  -->
    </div>
    <!-- /. WRAPPER  -->
    <!-- SCRIPTS -AT THE BOTOM TO REDUCE THE LOAD TIME-->
    <!-- JQUERY SCRIPTS -->
    <script src="/portal/js/jquery-1.10.2.js"></script>
    <!-- BOOTSTRAP SCRIPTS -->
    <script src="/portal/js/bootstrap.min.js"></script>
    <!-- METISMENU SCRIPTS -->
    <script src="/portal/js/jquery.metisMenu.js"></script>
    <!-- CUSTOM SCRIPTS -->
    <script src="/portal/js/custom.js"></script>


    </body>

    </html>