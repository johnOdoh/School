<%- include('./header.ejs') %>
    <!-- /. NAV SIDE  -->
    <div id="page-wrapper">
        <div id="page-inner">
            <div class="row">
                <div class="col-md-12">
                    <h2>Select students to promote to the next class</h2>
                </div>
            </div>
            <!-- /. ROW  -->
            <hr />
            <div class="row">
                <div class="panel-body">
                    <div class="table-responsive">
                        <form action="/student/registerSubjects" method="POST">
                            <table class="table table-striped table-bordered table-hover" style="width: 100%;">
                                <thead class="text-left">
                                    <tr>
                                        <th>Select</th>
                                        <th>Reg No</th>
                                        <th>Name</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for (let student of myStudents) { %>
                                        <tr>
                                            <td><input type="checkbox" name="studentIds[]" value="<%= student._id %>"></td>
                                            <td>
                                                <%= student.regNo %>
                                            </td>
                                            <td>
                                                <%= student.surName + ' ' + student.firstName + ' ' + student.middleName %>
                                            </td>
                                        </tr>
                                        <% } %>
                                </tbody>
                            </table>
                            <button type="submit" class="btn btn-danger">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /. PAGE INNER  -->
    </div>
    <!-- /. PAGE WRAPPER  -->
    </div>
    <!-- /. WRAPPER  -->
    <!-- JQUERY SCRIPTS -->
    <script src="/portal/js/jquery-1.10.2.js"></script>
    <!-- BOOTSTRAP SCRIPTS -->
    <script src="/portal/js/bootstrap.min.js"></script>
    <!-- METISMENU SCRIPTS -->
    <script src="/portal/js/jquery.metisMenu.js"></script>
    <!-- CUSTOM SCRIPTS -->
    <script src="/portal/js/custom.js"></script>
    <script>
        alert(`Ensure you have uploaded your students' results before you proceed, as you will no longer be able to view them when they are promoted`)
    </script>


    </body>

    </html>