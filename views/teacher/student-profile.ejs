<%- include('./header.ejs') %>
    <div id="page-wrapper">
        <div id="page-inner">
            <div class="row">
                <div class="col-md-12">
                    <h2>Student Profile</h2>
                </div>
            </div>
            <!-- /. ROW  -->
            <hr />
            <div class="row">
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" style="width: 100%;">
                            <tr>
                                <td><img src="<%= student.image %>" style="width: 100px; height: 100px;"></td>
                                <td></td>
                            </tr>
                            <tr>
                                <td>Name</td>
                                <td>
                                    <%= student.surName + ' ' + student.firstName + ' ' + student.middleName %>
                                </td>
                            </tr>
                            <tr>
                                <td>Reg No</td>
                                <td>
                                    <%= student.regNo %>
                                </td>
                            </tr>
                            <tr>
                                <td>Class</td>
                                <td>
                                    <%= student.class.concat(student.division || '') %>
                                </td>
                            </tr>
                            <tr>
                                <td>Address</td>
                                <td>
                                    <%= student.address %>
                                </td>
                            </tr>
                            <tr>
                                <td>Gender</td>
                                <td style="text-transform: capitalize;">
                                    <%= student.gender %>
                                </td>
                            </tr>
                            <tr>
                                <td>DOB</td>
                                <td>
                                    <%= student.DOB %>
                                </td>
                            </tr>
                            <tr>
                                <td>State</td>
                                <td>
                                    <%= student.state %>
                                </td>
                            </tr>
                            <tr>
                                <td>LGA</td>
                                <td>
                                    <%= student.LGA %>
                                </td>
                            </tr>
                            <tr>
                                <td>HomeTown</td>
                                <td>
                                    <%= student.hometown %>
                                </td>
                            </tr>
                            <tr>
                                <td>Blood Group</td>
                                <td>
                                    <%= student.bloodGroup %>
                                </td>
                            </tr>
                            <tr>
                                <td>Admision Year</td>
                                <td>
                                    <%= student.year %>
                                </td>
                            </tr>
                            <tr>
                                <td>Sponsor Name</td>
                                <td>
                                    <%= student.sponsor_surname + ' ' + student.sponsor_firstname + ' ' + student.sponsor_middlename %>
                                </td>
                            </tr>
                            <tr>
                                <td>Sponsor Address</td>
                                <td>
                                    <%= student.sponsor_address %>
                                </td>
                            </tr>
                            <tr>
                                <td>Sponsor Phone No</td>
                                <td>
                                    <%= student.sponsor_phoneNo %>
                                </td>
                            </tr>
                            <tr>
                                <td>Sponsor Email</td>
                                <td>
                                    <%= student.sponsor_email %>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
            <!-- /. PAGE INNER  -->
        </div>
        <!-- /. PAGE WRAPPER  -->
    </div>
    <!-- /. WRAPPER  -->
    <!-- SCRIPTS -AT THE BOTOM TO REDUCE THE LOAD TIME-->
    <!-- JQUERY SCRIPTS -->
    <script src="/portal/js/jquery-1.10.2.js"></script>
    <!-- BOOTSTRAP SCRIPTS -->
    <script src="/portal/js/bootstrap.min.js"></script>
    <!-- METISMENU SCRIPTS -->
    <script src="/portal/js/jquery.metisMenu.js"></script>
    <!-- CUSTOM SCRIPTS -->
    <script src="/portal/js/custom.js"></script>


    </body>

    </html>